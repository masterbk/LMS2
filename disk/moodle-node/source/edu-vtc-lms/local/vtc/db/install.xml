<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/vtc/db" VERSION="20210930" COMMENT="XMLDB file for Moodle local/vtc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="course_ext_info" COMMENT="The addition information for course.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key references course.id"/>
                <FIELD NAME="vtclayoutenabled" SEQUENCE="false" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="Use VTC layout instead of the original."/>
                <FIELD NAME="coursevideo" TYPE="char" LENGTH="512" NOTNULL="false" SEQUENCE="false" COMMENT="Course video."/>
                <FIELD NAME="coursecontentsummary" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Course content overview."/>
                <FIELD NAME="courseduration" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" COMMENT="Course duration."/>
                <FIELD NAME="continuousupdate" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="Course continuously update."/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Time created"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Time modified"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
